from collections import Counter

sentence = str(input('–í–≤–µ–¥–∏—Ç–µ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏–µ '))

def words_counter(x):
    words = x.split(' ')
    count_words = len(words)
    return count_words

def replacer(x):
    rep = x.replace(input('–í–≤–µ–¥–∏—Ç–µ –∑–∞–º–µ–Ω—è–µ–º—ã–π —Å–∏–º–≤–æ–ª '), 'üòê')
    return rep

def split(x):
    x = [char for char in x]
    return x

def same_symbols_couter(x):
    x = split(x)
    count = Counter(x)
    return count

print('–∫–æ–ª-–≤–æ —Å–ª–æ–≤ - ', words_counter(sentence))
print('—Ä–µ–∑—É–ª—å—Ç–∞—Ç -', replacer(sentence))
print('–∫–æ–ª-–≤–æ –ø–æ–≤—Ç–æ—Ä–µ–Ω–∏–π —Å–∏–º–≤–æ–ª–∞ - ', same_symbols_couter(sentence))
